<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#A6FFDD00"
    android:layout_height="match_parent"
    tools:context=".AlumnoActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombre_Alumno" android:textSize="18sp"
        android:textStyle="bold" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:text="Matricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/matricula_Alumno"
        app:layout_constraintTop_toBottomOf="@+id/nombre_Alumno" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="8dp"
        android:textColor="@color/black"/>

    <TextView
        android:text="asunto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/asunto_Alumno" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/matricula_Alumno" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="330dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/asunto_Alumno"
        app:srcCompat="@drawable/ic_launcher_background" />

</androidx.constraintlayout.widget.ConstraintLayout>